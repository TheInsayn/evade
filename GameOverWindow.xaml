<Window x:Class="WpfEvade.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEvade"
        mc:Ignorable="d"
        Title="Game Over" Height="244" Width="569" KeyDown="OnKeyDownHandler">
    <Grid>
        <Label x:Name="lblResult" Content="Well Done!" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Press &lt;RETURN&gt; to try again, &lt;ESCAPE&gt; to quit" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="and &lt;DELETE&gt; to clear highscore." HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
